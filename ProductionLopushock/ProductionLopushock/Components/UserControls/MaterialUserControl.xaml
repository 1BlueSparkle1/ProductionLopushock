<UserControl x:Class="ProductionLopushock.Components.UserControls.MaterialUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProductionLopushock.Components.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Width="400" Height="100" BorderThickness="1" BorderBrush="Black" Margin="10">
        <Grid>
            <StackPanel Orientation="Horizontal">
                <StackPanel Width="200" Margin="5" VerticalAlignment="Center">
                    <TextBlock>Материал</TextBlock>
                    <ComboBox x:Name="MaterialsCb"></ComboBox>
                </StackPanel>
                <StackPanel Width="80" Margin="5" VerticalAlignment="Center">
                    <TextBlock>Количество</TextBlock>
                    <TextBox x:Name="QuantityTb" PreviewTextInput="QuantityTb_PreviewTextInput"></TextBox>
                </StackPanel>
                <StackPanel Margin="5" Width="90" VerticalAlignment="Center">
                    <Button x:Name="DeleteBtn" Background="#FFD25C5C" Click="DeleteBtn_Click">Удалить</Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
